{
  "name": "webhook-handler",
  "version": "1.0.0",
  "description": "Telegram webhook handler for Papertrail Invoice Bot",
  "main": "dist/index.js",
  "author": "Ido Betesh",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "NODE_ENV=development node -r dotenv/config -r ts-node/register src/index.ts",
    "dev:local": "NODE_ENV=development SKIP_CLOUD_TASKS=true node -r dotenv/config -r ts-node/register src/index.ts",
    "test": "npm run test:unit && npm run test:integration",
    "test:unit": "jest --config jest.config.js",
    "test:integration": "jest --config jest.config.integration.js --forceExit",
    "test:watch": "jest --watch --config jest.config.js",
    "test:changed": "jest --onlyChanged --config jest.config.js",
    "test:fast": "jest --bail --maxWorkers=4 --config jest.config.js",
    "test:ci": "jest --ci --maxWorkers=2",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "format": "prettier --write src/",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@google-cloud/firestore": "^7.1.0",
    "@google-cloud/tasks": "^5.1.0",
    "express": "^4.18.2",
    "http-status-codes": "^2.3.0",
    "morgan": "^1.10.0",
    "pino": "^8.17.0",
    "pino-http": "^9.0.0",
    "supertest": "^7.2.2",
    "zod": "^4.3.5"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.0",
    "@types/morgan": "^1.9.9",
    "@types/node": "^20.10.0",
    "@types/supertest": "^6.0.3",
    "dotenv": "^17.2.3",
    "jest": "^29.7.0",
    "pino-pretty": "^10.3.0",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.0"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
