# Webhook Handler Environment Variables
# Copy to .env for local development

# =============================================================================
# Server Configuration
# =============================================================================

# Port to listen on (Cloud Run sets this automatically)
PORT=8080

# Node environment
# Set to 'development' to bypass Cloud Tasks and call worker directly
NODE_ENV=development

# =============================================================================
# GCP Configuration
# =============================================================================

# Your GCP project ID
GCP_PROJECT_ID=your-project-id

# GCP region (must match Cloud Tasks queue location)
GCP_LOCATION=us-central1

# =============================================================================
# Cloud Tasks Configuration
# =============================================================================

# Name of the Cloud Tasks queue
QUEUE_NAME=invoice-processing

# URL of the worker service
# - Local dev: http://localhost:8081
# - Production: https://worker-xxx.run.app
WORKER_URL=http://localhost:8081

# Service account email for Cloud Tasks OIDC authentication
# Only needed in production (leave empty for local dev)
SERVICE_ACCOUNT_EMAIL=tasks-invoker-sa@your-project-id.iam.gserviceaccount.com

# =============================================================================
# Security
# =============================================================================

# Secret path component for webhook URL
# Generate with: openssl rand -hex 16
WEBHOOK_SECRET_PATH=your-secret-path-here
