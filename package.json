{
  "name": "papertrail",
  "version": "1.0.0",
  "description": "Serverless Telegram invoice processing bot",
  "private": true,
  "author": "Ido Betesh",
  "scripts": {
    "prepare": "husky",
    "lint": "npm run lint:webhook && npm run lint:worker && npm run lint:admin",
    "lint:webhook": "cd services/webhook-handler && npm run lint",
    "lint:worker": "cd services/worker && npm run lint",
    "lint:admin": "cd tools/admin && npm run lint",
    "lint:fix": "npm run lint:fix:webhook && npm run lint:fix:worker && npm run lint:fix:admin",
    "lint:fix:webhook": "cd services/webhook-handler && npm run lint:fix",
    "lint:fix:worker": "cd services/worker && npm run lint:fix",
    "lint:fix:admin": "cd tools/admin && npm run lint:fix",
    "build": "npm run build:webhook && npm run build:worker",
    "build:webhook": "cd services/webhook-handler && npm run build",
    "build:worker": "cd services/worker && npm run build",
    "clean": "rm -rf services/webhook-handler/dist services/worker/dist"
  },
  "lint-staged": {
    "services/webhook-handler/**/*.ts": [
      "eslint --fix",
      "prettier --write",
      "bash -c 'cd services/webhook-handler && npx tsc --noEmit'"
    ],
    "services/worker/**/*.ts": [
      "eslint --fix",
      "prettier --write",
      "bash -c 'cd services/worker && npx tsc --noEmit'"
    ],
    "shared/**/*.ts": [
      "eslint --fix",
      "prettier --write"
    ],
    "tools/admin/**/*.ts": [
      "eslint --fix",
      "prettier --write",
      "bash -c 'cd tools/admin && npx tsc --noEmit'"
    ]
  },
  "devDependencies": {
    "@eslint/js": "^9.0.0",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "eslint": "^8.57.0",
    "husky": "^9.0.0",
    "lint-staged": "^15.2.0",
    "prettier": "^3.2.0"
  },
  "engines": {
    "node": ">=24.0.0"
  }
}
